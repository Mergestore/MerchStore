@{
    ViewData["Title"] = "MerchStore - Din butik för träningsprodukter";
}

<style>
    /* Hero-sektion styling */
    .hero-section {
        background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.7)), url('https://blobmerchstore2204.blob.core.windows.net/imagerepository/Screenshot 2025-05-21 at 17.04.53.png');
