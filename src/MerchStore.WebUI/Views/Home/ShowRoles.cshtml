@{
    ViewData["Title"] = "Dina roller";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="display-4">Användarrollsinformation</h1>
        <p class="lead">Här kan du se dina roller och behörigheter.</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="alert alert-info">
            <h5>Information om dig</h5>
            <p>Du är inloggad som: <strong>@ViewBag.UserName</strong></p>
            <p>Är du admin? <strong>@ViewBag.IsInAdminRole</strong></p>

            <h5 class="mt-3">Dina roller:</h5>
            @if (ViewBag.Roles != null && ViewBag.Roles.Count > 0)
            {
                <ul>
                    @foreach (var role in ViewBag.Roles)
                    {
                        <li>@role</li>
                    }
                </ul>
            }
            else
            {
                <p>Du har inga roller tilldelade.</p>
            }
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Tillbaka till startsidan</a>
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-danger">Försök gå till Admin Dashboard</a>
</div>