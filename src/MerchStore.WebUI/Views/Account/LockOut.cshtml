@{
    ViewData["Title"] = "Kontot låst";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-warning shadow">
            <div class="card-header bg-warning text-dark">
                <h2 class="fs-4 mb-0">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5 class="alert-heading">Kontot har låsts</h5>
                    <p>Ditt konto har låsts på grund av för många misslyckade inloggningsförsök.</p>
                    <hr>
                    <p class="mb-0">Vänligen försök igen senare eller kontakta support för hjälp.</p>
                </div>
                <div class="mt-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Tillbaka till startsidan</a>
                </div>
            </div>
        </div>
    </div>
</div>